{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "pretty": true,
    "outDir": "dist",
    "baseUrl": ".",
    "lib": [
      "esnext",
      "es2016",
      "es2017"
    ],
    "paths": {
      "~src/*": [
        "./src/*"
      ]
    },
  },
  "include": [
    "src/**/*"
  ],
  "compileOnSave": true,
  "exclude": [
    "node_modules"
  ]
}